@page "/imc"

<h3>Calcular seu <b id="icmsv">IMC</b></h3>
<hr />
<br />

<label>Informe a sua altura: </label>
<br />
<input @bind="altura" />
<br />

<br />

<label>Informe seu peso</label>
<br />
<input @bind="peso" />
<br />
<br />

<button @onclick="CalcularImc">Calcular</button>
<br />
<hr />

<label>Seu IMC é: @imc </label>
<hr />
<br />

<table class="table">
    <tr>
        <td>IMC</td>
        <td>Classificação</td>
    </tr>
    <tr>
        <td>Menor do que 16</td>
        <td>Magreza grau III</td>
    </tr>
    <tr>
        <td>16,0 até 16,9</td>
        <td>Magreza grau II</td>

    </tr>
    <tr>
        <td>17,0 até 18,4</td>
        <td>Magreza grau I</td>
    </tr>
    <tr>
        <td>18,5 até 24,9</td>
        <td>Adequado</td>
    </tr>
    <tr>
        <td>25,0 até 29,9</td>
        <td>Pré-Obesidade</td>
    </tr>
    <tr>
        <td>30,0 até 34,9</td>
        <td>Obesidade grau I</td>
    </tr>
    <tr>
        <td>35,0 até 39,9</td>
        <td>Obesidade grau II</td>
    </tr>
    <tr>
        <td>Acima de 40</td>
        <td>Obesidade grau III</td>
    </tr>
</table>

@code {
    double peso;
    double altura;
    double imc;

    void CalcularImc()
    {
        imc = peso / (altura * altura);
    }
}
